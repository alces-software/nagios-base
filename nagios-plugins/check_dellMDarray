# Script to check the status of an attached Dell MD32x0 series array
# N.B. This script needs to be run with SUDO by the nagios user

if [ "$1" != "" ] ; then
   arrayname=$1
   checkcommand=`sudo /usr/bin/SMcli -d -v | grep -i $arrayname `
else
   checkcommand=`sudo /usr/bin/SMcli -d -v | head -1 `
fi

if [ "$checkcommand" == "" ] ; then
   echo "No response from $arrayname array"
   exit 3
fi

if [ `echo $checkcommand | grep -ic optimal | awk '{print $1}'` -lt 1 ] ; then
   echo "SAS array warning: `echo $checkcommand | sed 's?\t? ?g'`"
   exit 1
elif [ "$arrayname" != "" ] ; then
   echo "$arrayname OK"
   exit 0
else
   echo "SAS array OK"
   exit 0
fi

