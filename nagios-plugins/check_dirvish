#!/bin/bash

statusfile=/var/spool/nagios/dirvish.out
mount_point="$1"

/opt/nagios/nagios-plugins/check_ismounted ${mount_point}
rc=$?

if [ ${rc} -ne "0" ]; then
   exit ${rc}
fi

if [ ! -f $statusfile ] ; then
   echo "No dirivsh status file found"
   exit 0
fi

exitstatus=`tail -1 $statusfile`

head -n 1 $statusfile

exit $exitstatus
