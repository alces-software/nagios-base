# Script to check the status of IBM P9 hardware
# N.B. actual status collection is performed by tool called by cron

checkdir=/var/spool/nagios/hmcevents

badhmc=""

for i in 1 2 3 4
do
   if [ ! -f $checkdir/hmc$i.out ] || [ `grep -c "No results were found." $checkdir/hmc$i.out | awk '{print $1}'` -ne 1 ] ; then
      badhmc=`echo $badhmc,$i`
   fi
done

badhmcstring=`echo $badhmc | sed 's?^,??g' | sed 's?,$??g'`

if [ "$badhmcstring" == "" ] ; then
   echo "No HMC events logged"
   exit 0
else
   echo "Events logged on HMC(s) $badhmcstring"
   exit 1
fi
